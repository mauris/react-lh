  "main": "lib/index.js",
  "unpkg": "dist/react-lh.min.js",
  "module": "es/index.js",
  "repository": "https://github.com/mauris/react-lh.git",
  "scripts": {
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
